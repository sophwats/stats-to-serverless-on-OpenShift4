kind: ConfigMap
apiVersion: v1
metadata:
  name: workshop-singleuser-profiles
  namespace: {{ namespace }}
  labels:
    jupyterhub: singleuser-profiles
data:
  jupyterhub-singleuser-profiles.yaml: |
    profiles:
    - name: globals
      env:
        - name: S3_ENDPOINT_URL
          value: s3.odh.com
      resources:
        requests:
          memory: 1Gi
          cpu: 500m
        limits:
          memory: 2Gi
          cpu: 1

    - name: Workshop Notebook
      images:
      - '{{ workshop_jupyter_notebook_imagestream_name }}:{{ workshop_jupyter_notebook_imagestream_tag }}'
      env: {}

    sizes: {}
